# Translation API Configuration
# Copy this file to .env and add your API keys

# MyMemory Translation API (Default - No key required)
# Free tier: 5000 characters/day
# No configuration needed - works out of the box

# Google Cloud Translation API (Optional)
# Get your API key from: https://console.cloud.google.com/
# VITE_GOOGLE_TRANSLATE_API_KEY=your_google_api_key_here

# DeepL API (Optional - Better quality)
# Get your API key from: https://www.deepl.com/pro-api
# Free tier: 500,000 characters/month
# VITE_DEEPL_API_KEY=your_deepl_api_key_here

# LibreTranslate API (Optional - Self-hosted or public)
# Default public instance: https://libretranslate.de
# Or host your own: https://github.com/LibreTranslate/LibreTranslate
# VITE_LIBRETRANSLATE_URL=https://libretranslate.de

# Translation Service Selection
# Options: mymemory | google | deepl | libretranslate
# Default: mymemory
# VITE_TRANSLATION_SERVICE=mymemory

# Translation Cache Settings
# Enable persistent cache in localStorage (true/false)
# VITE_TRANSLATION_CACHE_ENABLED=true

# Translation Cache Expiry (in days)
# VITE_TRANSLATION_CACHE_EXPIRY_DAYS=7

# API Request Timeout (in milliseconds)
# VITE_TRANSLATION_TIMEOUT=10000

# Enable Translation Debug Logging
# VITE_TRANSLATION_DEBUG=false

# Fallback Language (when translation fails)
# VITE_FALLBACK_LANGUAGE=en

# Pre-translation Settings
# Enable pre-translation of popular content
# VITE_ENABLE_PRETRANSLATION=false

# Translation Quality Threshold (0-1)
# Skip translations below this confidence score
# VITE_TRANSLATION_QUALITY_THRESHOLD=0.7
